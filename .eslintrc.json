{
  "env": {
    "browser": false,
    "commonjs": true,
    "es6": true,
    "node": true,
    "mocha": true,
    "es2022": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",  // 启用 TS 推荐规则
    "plugin:@typescript-eslint/recommended-requiring-type-checking" // 关键：启用基于类型检查的规则
  ],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 2022,
    "project": "./tsconfig.json",             // 关联 TS 配置
    "tsconfigRootDir": "."                    // 根目录位置
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    // 示例：启用严格类型规则
    "@typescript-eslint/no-explicit-any": "error",
    // "@typescript-eslint/explicit-function-return-type": "error",
    "@typescript-eslint/strict-boolean-expressions": "error"
  },
  "overrides": [
    {
      "files": ["*.js"], // JS 文件覆盖配置（避免 TS 规则污染 JS）
      "extends": ["eslint:recommended"],
      "parser": "@babel/eslint-parser",
      "parserOptions": {
        "requireConfigFile": false, // 关键：禁用 Babel 配置文件检查
        "babelOptions": {
          "presets": ["@babel/preset-env"]
        }
      },
      "rules": {
        "@typescript-eslint/no-unsafe-*": "off" // 关闭 TS 相关规则
      }
    }
  ]
}